{
  "name": "markdown-preview-echarts-support",
  "displayName": "Markdown Preview ECharts Support",
  "description": "为 VS Code 的 Markdown 预览添加 ECharts 图表支持",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-preview-echarts-support.preview",
        "title": "Preview Markdown with ECharts"
      }
    ],
    "markdown": {
      "markdownItPlugins": true
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.8.7",
    "@types/markdown-it": "^13.0.7",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "echarts": "^5.4.3",
    "markdown-it": "^13.0.2"
  }
} 