{
    "name": "echarts-markdown-preview",
    "displayName": "ECharts Markdown Preview",
    "description": "Adds ECharts support to VSCode's builtin markdown preview",
    "version": "0.0.2",
    "publisher": "FlomoN",
    "engines": {
        "vscode": "^1.74.0"
    },
    "preview": true,
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "markdown.previewStyles": [
            "./charts.css"
        ],
        "markdown.previewScripts": [
            "./dist/charts-bundle.js"
        ],
        "markdown.markdownItPlugins": true,
        "commands": [
            {
                "command": "markdown.showPreviewDevTools",
                "title": "Open Preview DevTools",
                "category": "Markdown"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run build",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "watch-webpack": "webpack --watch --mode development",
        "watch-all": "concurrently \"npm run watch\" \"npm run watch-webpack\"",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "build": "webpack --mode production"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.18.34",
        "@types/vscode": "^1.74.0",
        "@vscode/test-electron": "^2.3.2",
        "concurrently": "^8.2.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-commonjs": "^25.0.0",
        "rollup": "^2.79.1",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "echarts": "^5.4.3",
        "echarts-gl": "^2.0.9"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/FlomoN/echarts-markdown-preview.git"
    },
    "icon": "logo.png"
}